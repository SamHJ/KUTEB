<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    tools:context=".Activities.UpdateExamQuestion">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_20dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/subject_input_layout"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_subject"
                    android:textSize="18sp"
                    android:enabled="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_subject"
                    android:nextFocusLeft="@id/question_subject"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question"
                    android:textSize="18sp"
                    android:minHeight="100dp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question"
                    android:nextFocusLeft="@id/question"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_file_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_file_type"
                    android:textSize="18sp"
                    android:enabled="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_file_type"
                    android:nextFocusLeft="@id/question_file_type"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:id="@+id/question_file_layout"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_file"
                    android:textSize="18sp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_file"
                    android:nextFocusLeft="@id/question_file"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:id="@+id/question_file_2_layout"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_file_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_file"
                    android:textSize="18sp"
                    android:enabled="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_file"
                    android:nextFocusLeft="@id/question_file"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacing="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_option"
                    android:textSize="18sp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_option"
                    android:nextFocusLeft="@id/question_option"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/correct_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/correct_answer"
                    android:textSize="18sp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/correct_answer"
                    android:nextFocusLeft="@id/correct_answer"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/question_difficulty"
                    android:textSize="18sp"
                    android:enabled="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_corner_toggle"
                    android:inputType="textMultiLine"
                    android:nextFocusUp="@id/question_difficulty"
                    android:nextFocusLeft="@id/question_difficulty"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="m" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/update"
                android:id="@+id/btn_add_question"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="80dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content">
            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>