<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/update"
            android:id="@+id/btn_update"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textAllCaps="false"
            app:iconTint="@color/white"
            app:iconGravity="textEnd"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/btn_delete"
            android:id="@+id/btn_delete"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textAllCaps="false"
            app:iconTint="@color/white"
            app:iconGravity="textEnd"
            android:backgroundTint="@color/red"
            android:layout_height="wrap_content">
        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_text"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:textSize="@dimen/dimen_20sp"
        android:text="@string/question_single"/>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/question_img"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:src="@drawable/greendemy_logo"/>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/youtube_video_image_placeholder"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="200dp"
        android:src="@drawable/video_placeholder_img"/>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/pdf_document_image_placeholder"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="200dp"
        android:src="@drawable/pdf_holder"/>

    <com.ct7ct7ct7.androidvimeoplayer.view.VimeoPlayerView
        android:id="@+id/vimeoPlayer"
        app:topicColor="#00FFFF"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <tcking.github.com.giraffeplayer2.VideoView
        android:id="@+id/video_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/audio_player_view"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/options_layout"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>